{
  "expo": {
    "name": "Party Hub",
    "slug": "nexo-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "nexo",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#A80002"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.busalacchi.nexo",
      "buildNumber": "1",
      "splash": {
        "image": "./assets/images/splash.png",
        "resizeMode": "cover",
        "backgroundColor": "#A80002"
      },
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Party Hub utilizza la tua posizione per mostrarti locali ed eventi nelle vicinanze.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Party Hub utilizza la tua posizione per mostrarti locali ed eventi nelle vicinanze.",
        "NSCameraUsageDescription": "Party Hub usa la fotocamera per creare storie.",
        "NSPhotoLibraryUsageDescription": "Party Hub accede alla galleria per selezionare immagini per le storie.",
        "UIBackgroundModes": ["remote-notification"],
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "edgeToEdgeEnabled": false,
      "splash": {
        "image": "./assets/images/splash.png",
        "resizeMode": "cover",
        "backgroundColor": "#A80002"
      },
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#A80002"
      },
      "package": "com.busalacchi.nexo",
      "versionCode": 1,
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "POST_NOTIFICATIONS",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.POST_NOTIFICATIONS"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/icon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#A80002",
          "image": "./assets/images/splash.png",
          "imageWidth": 200
        }
      ],
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Party Hub utilizza la tua posizione per mostrarti locali ed eventi nelle vicinanze."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/icon.png",
          "color": "#A80002"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "1f2e3e08-9638-4dc8-94f0-6c5929bd3bd5"
      }
    }
  }
}
